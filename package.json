{
  "name": "patricktree-homepage",
  "private": true,
  "scripts": {
    "build": "superturbo run turbo:build",
    "dev": "pnpm --parallel --filter=\"./packages/*\" run dev",
    "format": "prettier --write --ignore-unknown .",
    "lint": "superturbo run turbo:lint",
    "lint:fix": "superturbo run turbo:lint:fix",
    "nuke": "pnpm --parallel run nuke && pnpm run nuke:artifacts && pnpm run nuke:compute-cache && pnpm run nuke:node-modules",
    "nuke:artifacts": "pnpm --parallel run nuke:artifacts",
    "nuke:compute-cache": "del-cli --dot=true \"*/**/.turbo\"",
    "nuke:node-modules": "del-cli --dot=true \"**/node_modules\"",
    "prepare": "node --eval \"process.exit(process.env.CI === 'true' ? 0 : -1)\" || (husky && pnpm exec add-all-tsconfigs-as-project-references --monorepo-path=. --tsconfig-filename=\"tsconfig.json\")"
  },
  "devDependencies": {
    "@patricktree-homepage/config-prettier": "workspace:*",
    "@patricktree-homepage/config-stylelint": "workspace:*",
    "@patricktree-homepage/config-turbo": "workspace:*",
    "@patricktree-homepage/config-typescript": "workspace:*",
    "@patricktree-homepage/eslint-config": "workspace:*",
    "@patricktree-homepage/superturbo": "workspace:*",
    "@patricktree/pkg-management": "^2.1.0",
    "del-cli": "^6.0.0",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "prettier-plugin-packagejson": "^2.5.10",
    "turbo": "^2.7.2",
    "typescript": "~5.9.3"
  },
  "packageManager": "pnpm@10.26.2",
  "engines": {
    "npm": "0.0.0",
    "pnpm": "10.26.2"
  },
  "pnpm": {
    "updateConfig": {
      "ignoreDependencies": [
        "eslint",
        "@types/eslint"
      ]
    },
    "patchedDependencies": {
      "@wyw-in-js/transform@0.5.5": "patches/@wyw-in-js__transform@0.5.5.patch"
    }
  }
}
