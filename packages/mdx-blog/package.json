{
  "name": "@patricktree-homepage/mdx-blog",
  "private": true,
  "type": "module",
  "imports": {
    "#pkg/*": "./dist/*"
  },
  "exports": {
    ".": null,
    "./*": "./dist/*.js"
  },
  "bin": {
    "fetch-favicons-for-articles": "./bin/fetch-favicons-for-articles.js",
    "generate-and-store-rss-feed": "./bin/generate-and-store-rss-feed.js",
    "generate-css-modules-for-articles": "./bin/generate-css-modules-for-articles.js"
  },
  "scripts": {
    "build": "superturbo run turbo:build",
    "dev": "pnpm run build --watch --preserveWatchOutput",
    "internal:compile": "tsc --build ./tsconfig.json",
    "lint": "superturbo run turbo:lint",
    "lint:file": "eslint --max-warnings 0",
    "lint:fix": "superturbo run turbo:lint:fix",
    "nuke": "pnpm run nuke:artifacts && del-cli node_modules",
    "nuke:artifacts": "del-cli dist *.tsbuildinfo",
    "turbo:build": "pnpm run internal:compile",
    "turbo:lint": "pnpm run lint:file .",
    "turbo:lint:fix": "pnpm run lint:file . --fix"
  },
  "dependencies": {
    "@patricktree-homepage/mdx": "workspace:*",
    "@patricktree/commons-ecma": "^2.4.1",
    "@patricktree/fetch-favicon": "^1.2.0",
    "feed": "^4.2.2",
    "gray-matter": "^4.0.3",
    "playwright": "^1.52.0",
    "tiny-invariant": "^1.3.3"
  },
  "devDependencies": {
    "@types/node": "^22.15.2"
  }
}
